@model ProductCodeItem

<li style="margin-bottom: 20px">
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Upc)
    @Html.HiddenFor(model => model.Name)
    <div>
        @Html.CheckBoxFor(model => model.IsSelected)
        @Html.LabelFor(model => model.IsSelected, string.Format("{0} {1} ({2})", Model.Upc, Model.Name, Model.Id), new { style = "width: 300px;" })
    </div>
    <div>
        @*@Html.LabelFor(model => model.ProductCode, new { style = "width: 200px;" })*@
        @Html.TextBoxFor(model => model.ProductCode, new { placeholder = "enter product code", @class = "short" })
    </div>
    <div>
        @*@Html.LabelFor(model => model.ProductDescription, new { style = "width: 200px;" })*@
        @Html.TextBoxFor(model => model.ProductDescription, new { placeholder = "enter product description", style = "width: 200px;" })
    </div>
    <div>
        @*@Html.LabelFor(model => model.Gtin, new { style = "width: 200px;" })*@
        @Html.EditorFor(model => model.Gtin, new { htmlAttributes = new { placeholder = "enter owner GTIN", style = "width: 200px;" } })
    </div>
    <div>
        @*@Html.LabelFor(model => model.PricePerPound, new { style = "width: 200px;" })*@
        @Html.TextBoxFor(model => model.PricePerPound, new { placeholder = "enter owner price per pound", style = "width: 200px;" })
    </div>
    <div class="edit-buttons">
        <a class="k-button k-button-icontext k-update-button" href="\\#"><span class="k-icon k-update"></span>Save</a>
        <a class="k-button k-button-icontext k-cancel-button" href="\\#"><span class="k-icon k-cancel"></span>Cancel</a>
    </div>
</li>
